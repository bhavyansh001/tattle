<div class="card" style="width: 20rem;">
  <div class="card-body">
    <h4 class="card-title">Comments</h4>
    <% @comments.each do |comment| %>
    <%= cache comment do %>
        <h5 class="card-subtitle mb-2"><%= comment.name %></h5>
        <span class= "text-muted">Posted <%= time_ago_in_words(comment.created_at) %> ago </span>
        <p class="card-text"><%= comment.body %></p>
    <% end %>    
        <% if (current_user.id == @article.user.id) || (current_user.id == comment.user.id) || (current_user.is_admin) %>
          <%= link_to 'Delete comment', [@article, comment], class: "btn btn-danger", data: {turbo_method: :delete} %>
        <% end %>
        <hr>
    <% end %>    
  </div>
</div>