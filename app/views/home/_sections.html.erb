<% @sections.each do |section| %>
  <div class="card">
    <div class="card-body">
      <h2><%= section.title %></h2>
      <p><%= section.body %></p>
      <% if user_signed_in? %>
        <%= link_to section.title, articles_path, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div><br>
<% end %>